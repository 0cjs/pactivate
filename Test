#!/usr/bin/env bash
set -eu -o pipefail

IMG=pactivate:deb11

sudo -v -p '[sudo] password for %p (to run docker): '
echo "Building container (this may take a few moments)...."
sudo docker build -q -t "$IMG" .
#sudo docker run --rm -it "$IMG" /bin/bash -l   # DEBUG
sudo docker run --rm "$IMG" /test/cont-test

